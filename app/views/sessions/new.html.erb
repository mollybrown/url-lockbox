<div class="main">
  <h1>Log In or Sign Up</h1>

  <div>
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Login" %>
    <% end %>
  </div>

  <p>Don't have an account? <%= link_to "Sign up by clicking here", new_user_path %>

</div>
