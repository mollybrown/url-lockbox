<%= link_to "Sign Out", logout_path, method: :delete %><br>

<% if @link.errors.any? %>
  <% @link.errors.full_messages.each do |msg| %>
    <%= msg %>
  <% end %>
<% end %>

<br>

<%= form_for(@link) do |f| %>
  <%= f.label :url %>
  <%= f.text_field :url %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.submit "Add Link" %>
<% end %>

<h2>Filters</h2>
<p>By text:</p>
<button>Only Unread Links</button>
<button>Only Read Links</button>

<hr>

<% @links.each do |l| %>
  <p>Title: <%= l.title %></p>
  <p>URL: <%= l.url %></p>
  <p>Read?: <%= l.read %></p>
  <button>Mark as Read</button>
  <button>Edit</button>
<% end %>
